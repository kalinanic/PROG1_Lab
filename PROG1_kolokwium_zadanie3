#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int sum(int tab[], int rozmiar){
    int suma = 0;
    int i;
    for(i = 0; i < rozmiar; i++){
        suma += tab[i];
    }
    return suma;
}
int min(int tab[], int rozmiar){
    int min = tab[0];
    int i;
    for(i = 0; i < rozmiar; i++){
        if(min > tab[i]){
            min = tab[i];
        }
    }
    return min;
}
int max(int tab[], int rozmiar){
    int max = tab[0];
    int i;
    for(i = 0; i < rozmiar; i++){
        if(max < tab[i]){
            max = tab[i];
        }
    }
    return max; 
}

int main()
{
    int tab[8] = {2, 7, 9, 11, 15, 20, 25, 55};
    int i;
    int range = 300;
    int rozmiar = sizeof(tab)/sizeof(tab[0]);
    for(i = 0; i < rozmiar; i++){
        tab[i] = rand () % range + 1;
    }
    for(i = 0; i < rozmiar; i++){
        printf("%d\n", tab[i]);
    }
    printf("Suma elementÃ³w w tablicy to: %d\n", sum(tab, rozmiar));
    printf("Najmniejszy element w tablicy to: %d\n", min(tab, rozmiar));
    printf("NajwiÄ™kszy element w tablicy to: %d\n", max(tab, rozmiar));
    return 0;
}
